<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <item
        android:gravity="bottom">
        <shape>
            <solid android:color="@color/white" />
            <size
                android:width="40dp"
                android:height="40dp" />
        </shape>
    </item>

    <item
        android:gravity="top">
        <shape>
            <solid android:color="@color/black" />
            <size
                android:width="40dp"
                android:height="40dp" />
        </shape>
    </item>
</layer-list>